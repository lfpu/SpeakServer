<?xml version="1.0" encoding="utf-8" ?>
<toolkit:Popup xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
               xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
               xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
               x:Class="Speaker.Pages.ChatPopup"
               HeightRequest="200"
               WidthRequest="350"
               >
    <VerticalStackLayout Padding="10" BackgroundColor="White" Spacing="10">
        <Button Text="Mute" Clicked="OnMuteClicked" BackgroundColor="#D23F3F"/>
        <Button Text="私发" Clicked="OnChatPrivateClicked" BackgroundColor="#98C54C"/>
        <Button Text="关闭" Clicked="OnCloseClicked"/>
    </VerticalStackLayout>
</toolkit:Popup>